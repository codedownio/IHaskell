FROM ubuntu:22.04

RUN apt update
RUN apt install -y git curl emacs
RUN apt install -y pkg-config
RUN apt install -y libzmq3-dev
RUN apt install -y libcairo2-dev
RUN apt install -y libtinfo-dev
RUN apt install -y libmagic-dev
RUN apt install -y libblas-dev
RUN apt install -y liblapack-dev
RUN apt install -y libpango1.0-dev

RUN curl -sSL https://get.haskellstack.org/ | sh

WORKDIR /root
RUN git clone https://github.com/ihaskell/IHaskell.git

WORKDIR /root/IHaskell

ENV LC_ALL C.UTF-8
